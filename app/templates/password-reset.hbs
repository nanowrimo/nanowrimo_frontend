<div class="nano-centered">
  <div>
    <div class="login_image"><img src="/images/other/login_image.svg" alt="" /></div>
    <div class="nano-card login">
      <div class="nano-subcard">
        <div class="nano-subcard-face face-front filled-grey">
          <div class="nano-subcard-content">
            <h2 class="card-title">Please enter your new password.</h2>
            {{#if successMessage}}
              <div class="alert alert-primary">
                Your password has been reset.<br>
                Please sign in with your new password.
                </div>
              {{sign-in-form}}
            {{else}}
              <form {{action 'submit' this on='submit'}} class="full-width">
                <div class="form-group">
                   {{form-for--hidden 
                  changeset=changeset 
                  property='token'
                  initial_value=token
                  }}
            
                  {{form-for--password 
                  changeset=changeset 
                  label='New Password'
                  property='password'
                  autofocus=true
                  }}
                </div>
          
                {{#if errorMessage}}
                  <div class="alert alert-danger">{{errorMessage}}</div>
                {{/if}}
                <button data-test-sign-in-submit type="submit" class="nano-button-large full-width">Submit</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
