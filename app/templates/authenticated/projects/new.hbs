<h2>New Project</h2>

{{#form-for
  afterSubmit=(action "afterSubmit")
  model=project
  as |f|
}}

  <div class="form-group">
    {{f.input
      label="Name"
      property="name"
    }}
  </div>
  <div class="form-group">
    {{f.multiselect
      data-test-select-genre=true
      property="genres"
      errorMessage=genreError
    }}
  </div>

  <input data-test-project-submit type="submit" class="btn btn-primary" value="Create Project" />

{{/form-for}}
