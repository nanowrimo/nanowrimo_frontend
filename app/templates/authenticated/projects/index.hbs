<h2>Projects Index</h2>

<table class="table">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Genres</th>
  </thead>
  <tbody>
    {{#each projects as |project|}}
      <tr>
        <td>{{project.id}}</td>
        <td data-test-project-name={{project.id}}>
          {{project.name}}
        </td>
        <td data-test-project-genres={{project.id}}>
          <ul>
            {{#each project.genres as |genre|}}
              <li data-test-genre-name={{genre.id}}>{{genre.name}}</li>
            {{/each}}
          </ul>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<p>{{link-to '+ New Project' 'authenticated.projects.new'
  class="btn-outline-primary"
  data-test-new-project=true
}}</p>
