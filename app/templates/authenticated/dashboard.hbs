{{page-title "Dashboard"}}
<div class="content-gutters">
  <div class="container-fluid">
    {{#if displayNowWhatBanner}}
      <HeadsUpBulletin @type="NowWhat" @buttonAction={{action "openNewProjectModal"}}></HeadsUpBulletin>
    {{/if}}
    {{#if displayEventBanner}}
      <HeadsUpBulletin @challenge={{displayEventBanner}}></HeadsUpBulletin>
    {{/if}}
    {{#if displayDonationWeekendBanner}}
      <HeadsUpBulletin @type="DonationWeekend"></HeadsUpBulletin>
    {{/if}}
    {{#if displayHowToWinBanner}}
      <HeadsUpBulletin @type="HowToWin"></HeadsUpBulletin>
    {{/if}}
    {{#if displayYiRBanner}}
      <div class="flash-banner">
        <div class="banner-left">
        </div>
        <div class="banner-content">
          <div class="flash-image image-unframed">
            <img style="width:100px; height:101px; margin: 10px;" src="/images/banners/bird.png" />
          </div>
          <div class="flash-content">
            <div class="flash-text">
              Happy New Year! Check out your  <a href='/year-in-review/2020' style='color: rgba(255,255,255, 0.9); padding-left: 7px; text-decoration: underline;'>2020 Year in Review</a>.
            </div>
          </div>
        </div>
        <div class="banner-right">
        </div>
      </div>
    {{/if}}

    {{banner-nano-prep}}
    {{donation-day-banner}}
    <div class="nw-panel-intro">
      <div class="welcome-content left-side">
        <h1>{{{currentEventWelcome}}},<br />{{currentUserName}}!</h1>
        <div class="nano-subtext">Hope your writing is going great!</div>
      </div>
      <div class="right-side">
        {{dashboard-fundometer class="fundometer"}}
      </div>
    </div>
    <div class="nw-panel nw-with-grid">
      <div class="grid-wrapper">
        {{#if currentUser.isLoaded}}
          {{#if currentUserHasProject}}
            {{project-summary-ux project=primaryProject class="nw-card g3-col1 g3-row1 g3-hspan2 g3-vspan2 g2-col1 g2-row1 g2-hspan2 g2-vspan1"}}
          {{else}}
            {{dashboard-new-user class="nw-card g3-col1 g3-row1 g3-hspan2 g3-vspan2 g2-col1 g2-row1 g2-hspan2 g2-vspan1"}}
          {{/if}}
          {{dashboard-challenge-yourself class="nw-my-buddies nw-card g3-col3 g3-row1 g3-hspan1 g3-vspan1 g2-col1 g2-row2 g2-hspan1 g2-vspan1"}}
          {{dashboard-my-buddies class="nw-my-buddies nw-card g3-col3 g3-row2 g3-hspan1 g3-vspan1 g2-col1 g2-row3 g2-hspan1 g2-vspan1"}}
          {{dashboard-home-region class="nw-card g3-col1 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row3 g2-hspan1 g2-vspan1"}}
          {{dashboard-hq class="nw-card g3-col2 g3-row3 g3-hspan1 g3-vspan1 g2-col2 g2-row3 g2-hspan1 g2-vspan1"}}
          {{dashboard-writing-groups class="nw-my-groups nw-card g3-col3 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row4 g2-hspan1 g2-vspan1"}}
          {{dashboard-my-offers class="nw-card g3-col1 g3-row4 g3-hspan1 g3-vspan1 g2-col2 g2-row4 g2-hspan1 g2-vspan1"}}
          {{dashboard-nano-store class="nw-card g3-col2 g3-row4 g3-hspan1 g3-vspan1 g2-col1 g2-row5 g2-hspan1 g2-vspan1"}}
          {{dashboard-writers-resources class="nw-card g3-col3 g3-row4 g3-hspan1 g3-vspan1 g2-col2 g2-row5 g2-hspan1 g2-vspan1"}}
        {{/if}}
      </div>
    </div>
  </div>
</div>

