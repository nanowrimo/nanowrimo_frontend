{{page-title pageTitle}}
<div class="content-gutters nw-pad-top">
  <div class="container-fluid">
    <div class="nw-panel nanomessages-panel nw-with-grid">
      <div class="grid-wrapper">
        <div class="nw-card nanomessages-card g3-col1 g3-row1 g3-hspan1 g3-vspan2 g2-col1 g2-row1 g2-hspan1 g2-vspan2">
          <div class="nw-card-header">
            <div class="nw-card-title">
              <div class="nw-card-title-left">
              </div>
              <div class="nw-card-title-center">{{cardTitle}}</div>
              <div class="nw-card-title-right">
                {{#if newMessage}}
                  <button class='nw-close-button'
                    onClick={{action 'cancelNewMessage'}}
                  >
                    <i class="fa fa-times" />
                    <div class='sr-only'>Cancel New Message</div>
                  </button>
                {{/if}}
              </div>
            </div>
          </div>
          <div class="nw-card-content">
            {{#if currentUser.isLoaded}}
            {{conversations-list group=group parentInitiateNewMessage=(action 'initiateNewMessage') parentCancelNewMessage=(action 'cancelNewMessage') newMessage=newMessage class="full-width"}}
            {{/if}}
          </div>
        </div>
        {{#if group}}
          {{group-chat group=group messagesLoaded=false context='nanomessages' clearGroup=clearGroup class="g3-col2 g3-row1 g3-hspan2 g3-vspan2 g2-col2 g2-row1 g2-hspan1 g2-vspan2"}}
        {{else}}
          {{group-chat-placeholder class="g3-col2 g3-row1 g3-hspan2 g3-vspan2 g2-col2 g2-row1 g2-hspan1 g2-vspan2"}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
