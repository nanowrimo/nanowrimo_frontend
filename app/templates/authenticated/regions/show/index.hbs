<div class="grid-wrapper">
  {{#if group.forumLink}}
    <div class="g3-col1 g3-row1 g3-hspan2 g2-col1 g2-row1 g2-hspan1">
      <a href="{{group.forumLink}}">For more conversation, check out your regional forum here.</a>
    </div>
    {{group-chat context='region' group=group class="g3-col1 g3-row2 g3-hspan2 g2-col1 g2-row2 g2-hspan1"}}
    {{group-users-list group=group listType='MLs' class="nw-card g3-col3 g3-row1 g3-hspan1 g3-vspan2 g2-col2 g2-row1 g2-hspan1 g2-vspan2"}}
  {{else}}
    {{group-chat context='region' group=group class="g3-col1 g3-row1 g3-hspan2 g2-col1 g2-row2 g2-hspan1"}}
    {{group-users-list group=group listType='MLs' class="nw-card g3-col3 g3-row1 g3-hspan1 g3-vspan1 g2-col2 g2-row1 g2-hspan1 g2-vspan1"}}
  {{/if}}
</div>
