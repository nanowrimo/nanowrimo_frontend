<div class="nw-panel nw-with-grid right-resize nw-with-tabs">
  <ul class="nw-panel-tabs">
    <li>{{link-to 'Overview' 'authenticated.regions.show.index'}}</li>
    <li>{{link-to 'Events' 'authenticated.regions.show.events'}}</li>
  </ul>
  {{#if hasEventsFrame}}
    <div class="nw-panel-primary-container">
      <div class='nw-panel-actions'>
        <button id="announce-new-event-button" class="nano-button-large" {{action "openEventModal"}}>
          Submit an event
        </button>
        {{event-modal
          open=addEvent
          user=user
          groupId=group.id
        }}
      </div>
    </div>
    <div class="nw-panel-secondary-container">
      <div class="nw-panel-secondary nw-panel-flex">
        {{outlet}}
        <div class="nw-card nw-prompt-card">
          <div class='nw-hflex'>
            <div class='action'>
              <a href="#" {{action "openEventModal"}}>Create a new event!</a>
            </div>
            <div class='prompt-image'>
              <img src="/images/users/projects/megaphone.svg">
            </div>
          </div>
        </div>
      </div>
      <ul class="nw-panel-tabs">
        <li>{{link-to 'Upcoming' 'authenticated.regions.show.events.upcoming'}}</li>
        <li>{{link-to 'Past' 'authenticated.regions.show.events.past'}}</li>
        {{#if canEditGroup}}
          <li>{{link-to 'Pending' 'authenticated.regions.show.events.pending'}}</li>
        {{/if}}
      </ul>
    </div>
  {{else}}
    {{outlet}}
  {{/if}}
</div>