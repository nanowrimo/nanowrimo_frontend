<div class="nw-panel nw-with-grid right-resize nw-with-tabs">
  <ul class="nw-panel-tabs">
    <li>{{link-to 'Overview' 'authenticated.regions.show.index'}}</li>
    <li>{{link-to 'Events' 'authenticated.regions.show.events'}}</li>
  </ul>
  <div class="grid-wrapper">
    <div class="nw-panel-actions" class="g3-col1 g3-row1 g3-hspan2 g3-vspan1 g2-col1 g2-row1 g2-hspan2 g2-vspan1">
      {{#link-to "authenticated.regions.show.events" tagName="button" class="button-reversed"}}
        <i class="fa fa-arrow-left" />
        Back to all events
      {{/link-to}}
    </div>
    {{event-card event=event class="g3-col1 g3-row2 g3-hspan2 g3-vspan1 g2-col1 g2-row2 g2-hspan1 g2-vspan1"}}
    <div class="nw-card g3-col3 g3-row2 g3-hspan1 g3-vspan1 g2-col2 g2-row3 g2-hspan1 g2-vspan1">
      <div class="nw-card-content">
        <div style="width: 300px; height: 200px;">
          {{#g-map lat=event.latitude lng=event.longitude zoom=8 as |context|}}
            {{g-map-marker context lat=event.latitude lng=event.longitude}}
          {{/g-map}}
          {{event.locationGroups.first}}
        </div>
      </div>
    </div>
    <div class="nw-card g3-col1 g3-row3 g3-hspan2 g3-vspan1 g2-col1 g2-row3 g2-hspan1 g2-vspan1">
      <div class="nw-card-header">
        <div class="nw-card-title">Chat</div>
      </div>
      <div class="nw-card-content">
      </div>
    </div>
    <div class="nw-card g3-col3 g3-row3 g3-hspan1 g3-vspan1 g2-col2 g2-row3 g2-hspan1 g2-vspan1">
      <div class="nw-card-header">
        <div class="nw-card-title">Who's attending</div>
      </div>
      <div class="nw-card-content">
      </div>
    </div>
  </div>
</div>
