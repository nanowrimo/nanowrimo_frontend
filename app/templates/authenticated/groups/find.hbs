<div class="content-gutters">
  <div class="container-fluid">
    <div class="d-flex align-top">
      <div class="nano-panel with-tabs">
        <ul class="nano-panel-tabs">
          <li>{{link-to "Find a Region" "authenticated.groups.find"}}</li>
          <li>{{link-to "Regional Leaderboard" "authenticated.groups.find"}}</li>
        </ul>
        <div class="grid-wrapper">
          <div class="nano-card g3-col1 g3-row1 g3-hspan1 g3-vspan2 g2-col1 g2-row1 g2-hspan1 g2-vspan2">
            <div class="nano-subcard">
              <div class="nano-subcard-face face-front filled-grey">
                <div class="nano-subcard-header">
                  <div class="corner-label">Find a Region</div>
                </div>
                <div class="nano-subcard-content">
                  <ul>
                    {{#each groups as |group|}}
                      <li {{action "remapCenter" group.longitude group.latitude}}>
                        <div>
                          {{group.id}}
                        </div>
                        <div>
                          {{group.name}}
                        </div>
                      </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="nano-card g3-col2 g3-row1 g3-hspan2 g3-vspan2 g2-col2 g2-row1 g2-hspan1 g2-vspan2">
            <div class="nano-subcard">
              <div class="nano-subcard-face face-front">
                <div class="nano-subcard-content no-padding">
                  {{#g-map lat=latitude lng=longitude zoom=6 as |context|}}
                    {{g-map-marker context lat=latitude lng=longitude}}
                  {{/g-map}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

