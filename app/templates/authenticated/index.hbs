<div class="content-gutters">
  <div class="container-fluid">
    {{#if currentUserIsNotConfirmed}}
      <div class="flash-banner">
        <div class="banner-left">
        </div>
        <div class="banner-content">
          <div class="flash-image image-unframed">
            <img src="/images/banners/wavinghand.svg" />
          </div>
          <div class="flash-content">
            <div class="flash-text">
              Welcome to NaNoWriMo! We just sent an email to {{currentUserEmail}} with a confirmation link, just so we know you're the right you. Click it and you'll be up and running in just a few moments!
            </div>
            <div class="flash-button">
              {{link-to 'Resend Email' 'resend-confirmation-email' tagName='button'}}
            </div>
          </div>
        </div>
        <div class="banner-right">
        </div>
      </div>
    {{/if}}
    <div class="nano-page-intro">
      <div class="welcome-content left-side">
        <h1>Welcome, {{currentUserName}}!</h1>
        <div class="nano-subtext">Hope your writing is going great!!!!!!!!!!</div>
      </div>
      <div class="right-side">
        {{!--
        {{dashboard-fundometer class="fundometer"}}
        --}}
      </div>
    </div>
    {{#unless currentUserHasProject}} 
      <div class="nano-panel">
        <div class="grid-wrapper">
          <div class="nano-card prompt-card short-card g3-col1 g3-row1 g3-hspan3 g3-vspan1 g2-col1 g2-row1 g2-hspan2 g2-vspan1">
            <div class="nano-subcard">
              <div class="nano-subcard-face">
                <div class="nano-subcard-content side-by-side">
                  <div class="side-by-side-even">
                    <div class="quote-text">Looks like you haven't started a<br />new novel yet.</div>
                  </div>
                  {{#if currentUser.user}}
                    <div class="side-by-side-even">
                      <a href="#" {{action "openNewProjectModal"}}>Announce a new project!</a>
                      {{project-new-modal
                        onHidden=(action "afterProjectModalClose")
                        open=addProject
                        user=currentUser.user
                        afterSubmit=(action "afterNewProjectSubmit")
                      }}
                      
                      <img src='/images/users/projects/megaphone.svg' class="prompt-image">
                    </div>
                  {{/if}} 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/unless}} 
    <div class="nano-panel">
      <div class="grid-wrapper">
        <div class="nano-card g3-col1 g3-row1 g3-hspan3 g3-vspan1 g2-col1 g2-row1 g2-hspan2 g2-vspan1">
          {{#if currentUser.user.primaryProject.latestProjectChallenge }}
              {{badges-card cardTitle='Writing badges' badgeType='word count' user=currentUser.user projectChallenge=currentUser.user.primaryProject.latestProjectChallenge}}
          {{/if}}
        </div>
        {{!--
        <div class="nano-card g3-col3 g3-row1 g3-hspan1 g3-vspan2 g2-col2 g2-row3 g2-hspan1 g2-vspan2">
          {{dashboard-my-buddies}}
        </div>
        
        <div class="nano-card g3-col1 g3-row2 g3-hspan2 g3-vspan1 g2-col1 g2-row2 g2-hspan2 g2-vspan1">
          {{dashboard-home-region class="g3-sub1 g2-sub1"}}
          {{dashboard-nanowrimo-hq class="g3-sub1 g2-sub1"}}
        </div>
        <div class="nano-card g3-col1 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row3 g2-hspan1 g2-vspan1">
          {{dashboard-writers-resources}}
        </div>
        <div class="nano-card g3-col2 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row4 g2-hspan1 g2-vspan1">
          {{dashboard-nano-store}}
        </div>
        <div class="nano-card g3-col3 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row5 g2-hspan1 g2-vspan1">
          {{dashboard-my-offers}}
        </div>
        <div class="nano-card g3-col1 g3-row4 g3-hspan1 g3-vspan1 g2-col2 g2-row5 g2-hspan1 g2-vspan1">
          {{dashboard-twitter}}
        </div>
        --}}
      </div>
    </div>
  </div>
</div>
