<div class="content-gutters">
  <div class="container-fluid">
    {{#if currentUserIsNotConfirmed}}
      <div class="flash-banner">
        <div class="banner-left">
        </div>
        <div class="banner-content">
          <div class="flash-image image-unframed">
            <img src="/images/banners/wavinghand.svg" />
          </div>
          <div class="flash-content">
            <div class="flash-text">
              Welcome to NaNoWriMo! We just sent an email to {{currentUserEmail}} with a confirmation link, just so we know you're the right you. Click it and you'll be up and running in just a few moments!
            </div>
            <div class="flash-button">
              {{link-to 'Resend Email' 'resend-confirmation-email' tagName='button'}}
            </div>
          </div>
        </div>
        <div class="banner-right">
        </div>
      </div>
    {{/if}}
    
    {{#if displayDonationDayBanner}}
      <div class="flash-banner">
        <div class="banner-left">
        </div>
        <div class="banner-content">
          <div class="flash-image image-unframed">
            <img src="/images/banners/wavinghand.svg" />
          </div>
          <div class="flash-content">
            <div class="flash-text">
              <span>
                <b>Today is our Double-Up Donation Day!</b>
                <a href="donation-day">Learn more</a> about how you can spend the day writing and supporting NaNoWriMo's nonprofit programs.
              </span>
            </div>
          </div>
        </div>
        <div class="banner-right">
        </div>
      </div>
    {{/if}}
    <div class="nw-panel-intro">
      <div class="welcome-content left-side">
        <h1>Welcome, {{currentUserName}}</h1>
        <div class="nano-subtext">Hope your writing is going great!</div>
      </div>
      <div class="right-side">

        {{dashboard-fundometer class="fundometer"}}

      </div>
    </div>
    <div class="nw-panel nw-with-grid">
      <div class="grid-wrapper">
        {{#if currentUserName}}
          {{#unless currentUserHasProject}} 
            <div class="nw-card nw-prompt-card g3-col1 g3-row1 g3-hspan3 g3-vspan1 g2-col1 g2-row1 g2-hspan2 g2-vspan1">
              <div class='nw-hflex'>
                <div class="project-announce-quote">
                  <div class="quote-text">"Keep your head in the clouds and your hands on the keyboard."<br />
                    <span class="quotee">Marissa Meyer</span>
                  </div>
                </div>
                <div class='action'>
                  <a href="#" {{action "openNewProjectModal"}}>Announce a new project!</a>
                </div>
                <div class='prompt-image'>
                  <img src="/images/users/projects/megaphone.svg">
                </div>
              </div>
            </div>
          {{/unless}}
          {{project-new-modal
            onHidden=(action "afterProjectModalClose")
            open=addProject
            user=currentUser.user
          }}
        {{/if}} 
        {{#if currentUserHasProject}}
          {{project-summary project=primaryProject author=currentUser.user class="nw-card g3-col1 g3-row1 g3-hspan3 g3-vspan1 g2-col1 g2-row1 g2-hspan2 g2-vspan1"}}
        {{/if}} 
        {{#if currentUserHasProject }}
          <div class="nw-card g3-col1 g3-row2 g3-hspan2 g3-vspan1 g2-col1 g2-row2 g2-hspan1 g2-vspan1">
            {{badges-card cardTitle='Writing badges' badgeType='word count' user=currentUser.user projectChallenge=primaryProject.latestProjectChallenge}}
          </div>
        {{else}}
          <div class="nw-card nw-prompt-card g3-col1 g3-row2 g3-hspan2 g3-vspan1 g2-col1 g2-row2 g2-hspan1 g2-vspan1">
            <div class="nw-card-header">
              <div class="nw-card-title">
                Writing Badges
              </div>
            </div>
            <div class='nw-hflex'>
              <div class='action' style="padding-top: 80px;">
                <a href="#" {{action "openNewProjectModal"}}>Create a project to start winning writing badges!</a>
              </div>
            </div>
          </div>
        {{/if}}
        
        {{dashboard-my-buddies class="nw-card g3-col3 g3-row2 g3-hspan1 g3-vspan1 g2-col2 g2-row2 g2-hspan1 g2-vspan1"}}
        {{dashboard-home-region class="nw-card g3-col1 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row3 g2-hspan2 g2-vspan1"}}
        {{dashboard-writers-resources class="nw-card g3-col2 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row3 g2-hspan1 g2-vspan1"}}
        {{dashboard-my-offers class="nw-card g3-col3 g3-row3 g3-hspan1 g3-vspan1 g2-col1 g2-row4 g2-hspan1 g2-vspan1"}}
        {{dashboard-nano-store class="nw-card g3-col1 g3-row4 g3-hspan1 g3-vspan1 g2-col2 g2-row4 g2-hspan1 g2-vspan1"}}
        {{dashboard-twitter class="nw-card g3-col2 g3-row4 g3-hspan1 g3-vspan1 g2-col2 g2-row4 g2-hspan1 g2-vspan1"}}
      </div>
    </div>
  </div>
</div>
