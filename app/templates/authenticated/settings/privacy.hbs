{{#form-for
  afterError=(action (mut error))
  afterSubmit=(action "afterSubmit")
  model=currentUser.user
  as |f|
}}
  <div class="nano-card">
    <div class="nano-subcard">
      <div class="nano-subcard-face face-front filled-grey">
        <div class="nano-subcard-content">
          <div class="form-group full-width">
            {{f.select
              label="Who can view your profile?"
              options=optionsForPrivacy
              property="privacyViewProfile"
            }}
          </div>
          <div class="form-group full-width">
            {{f.select
              label="Who can view your projects?"
              options=optionsForPrivacy
              property="privacyViewProjects"
            }}
          </div>
          <div class="form-group full-width">
            {{f.select
              label="Who can view your buddies?"
              options=optionsForPrivacy
              property="privacyViewBuddies"
            }}
          </div>
          <div class="form-group full-width">
            {{f.select
              label="Who can find you in search results?"
              options=optionsForPrivacy
              property="privacyViewSearch"
            }}
          </div>
          <div class="form-group full-width">
            {{f.select
              label="Who can send you NaNoMessages?"
              options=optionsForPrivacy
              property="privacySendNanomessages"
            }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="nano-card">
    <div class="nano-subcard">
      <div class="nano-subcard-face face-front filled-grey">
        <div class="nano-subcard-content">
          <div class="form-group full-width">
            {{f.yesno
              label="Maybe?"
              name="privacyVisibilityRegions"
              property="privacyVisibilityRegions"
            }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="nano-card card-submit">
    <div class="nano-subcard">
      <div class="nano-subcard-face face-front">
        <div class="nano-subcard-content">
          <button type="submit" class="nano-button-large">Save Changes</button>
          <div class="form-instruction" style="margin-left: 20px; margin-top: 10px; max-width: 70%;">{{form-for--response-message responseMessage=formResponseMessage}}</div>
        </div>
      </div>
    </div>
  </div>
{{/form-for}}
