{{#form-for model=user as |f| }}        
  <div class='nw-card'>      
    <div class='nw-card-header'>
       <div class='nw-card-title'>Profile</div>
    </div>
    <div class='nw-card-content'>
        <div class="form-group">
          {{f.select
            label="Who can view your profile?"
            options=optionsForPrivacyViewProfile
            property="privacyViewProfile"
          }}
        </div>
        <div class="form-group">
          {{f.select
            label="Who can view your projects?"
            options=optionsForPrivacyViewProjects
            property="privacyViewProjects"
          }}
        </div>
        <div class="form-group">
          {{f.select
            label="Who can view your buddies?"
            options=optionsForPrivacyViewBuddies
            property="privacyViewBuddies"
          }}
        </div>
        <div class="form-group">
          {{f.select
            label="Who can see you in search results?"
            options=optionsForPrivacyViewSearch
            property="privacyViewSearch"
          }}
        </div>
        <div class="form-group">
          {{f.select
            label="Who can send you NaNoMessages?"
            options=optionsForPrivacySendNanomessages
            property="privacySendNanomessages"
          }}
        </div>
        
      </div>
    </div>

  <div class='nw-card'>      
    <div class='nw-card-header'>
       <div class='nw-card-title'>Visibility</div>
    </div>
    <div class='nw-card-content'>
      <div class="nano-subcard-body">
        <div class="form-group inline-checkbox">
          {{f.checkbox
            label="Visible to my regions"
            property="privacyVisibilityRegions"
          }}
        </div>
        <div class="form-group inline-checkbox">
          {{f.checkbox
            label="Visible on buddy lists"
            property="privacyVisibilityBuddyLists"
          }}
        </div>
        <div class="form-group inline-checkbox">
          {{f.checkbox
            label="Visible on activity logs"
            options=optionsForPrivacyViewBuddies
            property="privacyVisibilityActivityLogs"
          }}
        </div>
      </div>
    </div>
  </div>
  <div class='nano-panel-footer'>
    {{f.save-cancel class="save-cancel"}}
  </div>
{{/form-for}}
