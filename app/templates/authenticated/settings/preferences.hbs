{{#form-for model=user as |f|}}
  <div class="nano-card short-card g3-col1 g3-row1 g3-hspan3 g2-col1 g2-row1 g2-hspan2">
    <div class="nano-subcard g3-sub1 g2-sub1">
      <div class="nano-subcard-face face-front filled-grey">
        <div class='nano-subcard-content'>
          <div class='nano-card-header'>
            <div class='title'>notifications</div>
            <div class='instruction'>Select the type of notifications you would like to receive.</div>
          </div>
          <div class="nano-subcard-body">
            
            <div class="form-group inline-checkbox">
              {{f.checkbox label="New buddy requests" property="notificationBuddyRequests"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from MLs" property="notificationNanomessagesMls"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Writing Reminders" property="notificationWritingReminders"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Buddy activities" property="notificationBuddyActivities"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from NaNo HQ" property="notificationNanomessagesHq"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Reaching goal milestones" property="notificationGoalMilestones"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="New events in your home region" property="notificationEventsInHomeRegion"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Word sprint invitations" property="notificationSprintInvitation"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Unlocking new badges" property="notificationNewBadges"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from your buddies" property="notificationNanomessagesBuddies"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Word sprints about to start" property="notificationNanomessagesSprintStart"}}
            </div>
           
          </div>
        </div>  
          
      </div>
    </div>
  </div>
  <div class="nano-card short-card g3-col1 g3-row1 g3-hspan3 g2-col1 g2-row1 g2-hspan2">
    <div class="nano-subcard g3-sub1 g2-sub1">
      <div class="nano-subcard-face face-front filled-grey">
        <div class='nano-subcard-content'>
          <div class='nano-card-header'>
            <div class='title'>emails</div>
            <div class='instruction'>Select the type of emails you would like to receive.</div>
          </div>
          <div class="nano-subcard-body">
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoWriMo newsletter" property="emailNewsletter"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="New events in your home region" property="emailEventsInHomeRegion"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from MLs" property="emailNanomessagesMls"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="New blog posts" property="emailBlogPosts"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="New buddy requests" property="emailBuddyRequests"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from your buddies" property="emailNanomessagesBuddies"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="NaNoMessages from NaNo HQ" property="emailNanomessagesHq"}}
            </div>
            <div class="form-group inline-checkbox">
              {{f.checkbox label="Writing reminders" property="emailWritingReminders"}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='nano-panel-footer'>
    {{f.save-cancel class="save-cancel"}}
  </div>
{{/form-for}}
