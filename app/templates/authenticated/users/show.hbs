{{#if showUserContent}}
  <div class='plate-wrapper {{if canEditUser "user-editable" ""}}' {{action "openImagesModal" "headerTab" bubbles=false}}>
    <div class="nano-user-plate full-width d-flex " {{action "openImagesModal" "headerTab"}} style={{plateStyle}} data-test-user-edit-plate>
      <div class="plate-cover">

        <div class="container-fluid">
          {{user-stats user=user}}
        </div>

        {{#if canEditUser}}
          {{!-- TODO: CSS styling for this edit link to show/hide --}}
          <div class="flip-corner-link" {{action "openImagesModal" "headerTab" bubbles=false}} data-test-user-profile-edit-stats>
            <img src="/images/global/flip_corner.png" alt="Edit User Images" />
          </div>
        {{/if}}

      </div>
    </div>
     <div class='plate-editable-overlay image-editable-overlay'>{{fa-icon "edit"}}</div>
  </div>
  <div class="content-gutters">
    <div class="container-fluid">
      <div class="d-flex align-top">
        <div class="nano-panel left-sidebar nano-profile">
          <div class="flip-corner">

            <div class="nano-avatar-large {{if canEditUser "user-editable" ""}}" {{action "openImagesModal"}} style={{if canEditUser (html-safe "cursor:pointer")}} data-test-user-edit-avatar>
              <img src={{user.avatarUrl}} alt={{user.name}} data-test-user-avatar>
              <div class='avatar-editable-overlay image-editable-overlay'>{{fa-icon "edit"}}</div>
              
              
            </div>
            <div class="nano-user-name" data-test-user-name>
              {{user.name}}
            </div>
            <div class="nano-user-location" data-test-user-location>
              {{user.location}}
            </div>
            <div class="nano-member-since" data-test-user-since>
              Member since {{moment-format user.createdAt 'MMM D, YYYY'}}
            </div>

            {{user-links links=user.externalLinks}}
            {{buddy-buttons user=user}}
            {{#if canEditUser}}

              <div class="flip-corner-link" {{action "openEditModal"}} data-test-user-profile-edit>
                <img src="/images/global/flip_corner.png" alt="Edit User Profile" />
              </div>

              {{user-edit-profile-modal
                onHidden=(action "afterEditModalClose")
                open=edit
                user=user
                tab=editTab
              }}

              {{user-edit-images-modal
                onHidden=(action "afterImagesModalClose")
                open=editImages
                user=user
                tab=editImagesTab
              }}

            {{/if}}

          </div>
          <div class="banner-divot"></div>
        </div>
        <div class="nano-panel right-resize with-tabs">
          <ul class="nano-panel-tabs">
            <li>{{link-to 'Profile' 'authenticated.users.show.index'}}</li>
            <li>{{link-to 'Projects' 'authenticated.users.show.projects' }}</li>
            <li>{{link-to 'Buddies' 'authenticated.users.show.buddies' }}</li>
          </ul>
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  {{outlet}}
{{/if}}
