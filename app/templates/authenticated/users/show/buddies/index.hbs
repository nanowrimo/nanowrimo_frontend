<div id='buddy-listing-panel' class="nano-panel right-resize with-tabs">
  <ul class="nano-panel-tabs">
    <li>{{link-to 'Profile' 'authenticated.users.show.index'}}</li>
    <li>{{link-to 'Projects' 'authenticated.users.show.projects' }}</li>
    <li>{{link-to 'Buddies' 'authenticated.users.show.buddies' }}</li>
  </ul>
  <div>
    <div class='buddy-listings'>
      <div class='nano-card short-card no-gap header-card'>
        <div class="nano-subcard">
          <div class="nano-subcard-face face-front">
            Buddy Invitations
          </div>
        </div>
      </div>
      <div>
        {{#each user.buddiesInvited as |buddy|}}
          {{buddy-listing user=buddy buttons=true}}
        {{/each}}
      </div>
      <div>
        {{#each user.buddiesInvitedBy as |buddy|}}
          {{buddy-listing user=buddy buttons=true}}
        {{/each}}
      </div>
    </div>
    <div class='buddy-listings'>
      <div class='nano-card short-card no-gap header-card'>
        <div class="nano-subcard">
          <div class="nano-subcard-face face-front">
            Current Buddies
          </div>
        </div>
      </div>
      <div>
        {{#each user.buddiesActive as |buddy|}}
          {{buddy-listing user=buddy buttons=true}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
