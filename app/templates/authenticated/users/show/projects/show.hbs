<div class="nw-panel-primary-container">
  <div class='nw-panel-actions'>
    {{#link-to "authenticated.users.show.projects" tagName="button" class="button-reversed"}}
      Back to all projects
    {{/link-to}}
  </div>
  {{project-summary project=project author=user}}
</div>
<div class="nw-panel-secondary-container">
  <div class="nw-panel-secondary nw-panel-flex">
    {{outlet}}
  </div>
  <ul class="nw-panel-tabs">
    <li>{{link-to 'Details' 'authenticated.users.show.projects.show.index' }}</li>
    <li>{{link-to 'Goals' 'authenticated.users.show.projects.show.goals' }}</li>
    <li>{{link-to 'Badges' 'authenticated.users.show.projects.show.badges' }}</li>
  </ul>
</div>

{{project-edit-modal
  onHidden=(action "afterEditProjectModalClose")
  open=displayEditModal
  project=project
}}
{{project-edit-cover-modal
  onHidden=(action "afterCoverModalClose")
  open=displayCoverEditModal
  project=project
  tab=editCoverTab
}}
