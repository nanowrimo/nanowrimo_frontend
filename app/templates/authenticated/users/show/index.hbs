<div class="nano-panel right-resize with-tabs">
  <ul class="nano-panel-tabs">
    <li>{{link-to 'Profile' 'authenticated.users.show'}}</li>
    <li>{{link-to 'Projects (2)' 'index'}}</li>
    <li>{{link-to 'Buddies (57)' 'index'}}</li>
  </ul>
  <div class="grid-wrapper">
    <div class="nano-card g1-row">
      About {{user.name}}
      <div class="row">
        <div class="col-6">

          {{!-- FIXME: Move these styles into CSS assets --}}
          <style>
            .nano-user-bio {
              /* line-height is currently 24px */
              overflow: hidden;
              max-height: 144px; /* line-height (24px) * number of lines (6) */
            }
            .nano-user-bio.expanded {
              max-height: none;
            }
          </style>
          {{!-- /FIXME --}}

          <div class="nano-user-bio{{if bioExpanded " expanded"}}" data-test-user-bio>
            {{user.bio}}
          </div>
          {{#if showBioReadMore}}
            <button {{action (mut bioExpanded) true}}>Read More</button>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="nano-card g1-row">
      Participation badges
    </div>
    <div class="nano-card g1-row">
      Writing badges
    </div>
    <div class="nano-card g1-row">
      Personal achievement badges
    </div>
  </div>
</div>
