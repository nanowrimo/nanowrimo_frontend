<div class="nano-panel">
  <div class="col">
    <h2>Sign In</h2>

    {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <p><a href="#" {{action "authenticateFacebook"}}>Sign In with Facebook</a></p>
    <p><a href="#" {{action "authenticateGoogle"}}>Sign In with Google</a></p>

    {{sign-in-form
      changeset=(changeset signInAttempt SignInAttemptValidations)
      afterSubmit=(action "afterSubmit")
    }}

    <hr />

    <p>{{link-to 'Sign Up' 'sign-up'}}</p>
  </div>
</div>
