<div id="main-nav-timer-form-display" class='logger-timer-modal' 
  role='dialog' aria-modal='true' aria-labelledby="main-nav-timer-form-header">
    <img src="/images/nav/tab.svg" alt="" class="nano-menu-tab" />
  <div class="modal-content">
    <div id="main-nav-timer-form-header" class="modal-header">
      Ready...? Set...?
    </div>
    <div id='timer-form-modes'>
      {{#if showStopwatch}}
        <div class='timer-sub-menu'>
          <span class='selected timer-sub-menu-item'>Stopwatch</span>
          <span class='timer-sub-menu-item'>
            <a href="#" {{action 'selectTimer'}}>Timer</a>
          </span>
        </div>

        <div class='footer-actions'>
          <input class='form-control nano-button' type='submit' value='Start Stopwatch' {{action "startStopwatch" }}>
          <a href="#" {{action "cancel"}} >Cancel</a>
        </div>

      {{else}}
        <div class='timer-sub-menu'>
          <span class='timer-sub-menu-item'>
            <a href="#" {{action 'selectStopwatch'}}>Stopwatch</a>
          </span>
          <span class='selected timer-sub-menu-item'>Timer</span>
        </div>
        <div class='timer-content'>
          {{#if countdownRemaining}}
            {{countdownRemaining}}
          {{else}}
            <!--
            <div class='timer-instruction'>You can enter time as 1.5 or 1:30, they both mean 1 hour and 30 minutes.</div>
            //-->
            <div class='timer-duration form-group'>
              <!--
              <input id='duration' class="form-control {{if validDurationInput '' 'is-invalid'}}" onchange={{action "durationChange" value="target.value"}}>
              //-->
              <div style="width: 200px; margin-bottom: 5px; font-family: 'SourceSansPro-Regular'">
                <input type='number' class="ember-text-field" min='0' name='timer-set-hours' onchange={{action 'timerSetHoursChanged' value="target.value"}} value={{timerHoursValue}} style="width: 70px; text-align: right;"> hours
              </div>
              <div style="width: 200px; font-family: 'SourceSansPro-Regular'">
                <input type='number' class="ember-text-field" min='0' name='timer-set-minutes' onchange={{action 'timerSetMinutesChanged' value="target.value"}} value={{timerMinutesValue}} style="width: 70px; text-align: right;"> minutes
              </div>
            </div>
          {{/if}}

        </div>
        <div class='footer-actions'>
          {{#if countdownRemaining}}
            <input class='form-control nano-button' type='submit' value='Cancel Timer' {{action "cancelTimer" }}>
          {{else}}
            <input class='form-control nano-button' type='submit' value='Start Timer' {{action "startTimer" }}>
            <a href="#" {{action "cancel"}} >Cancel</a>
          {{/if}}
        </div>

      {{/if}}
    </div>
  </div>

</div>

