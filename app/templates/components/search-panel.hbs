<div class="nw-panel-primary-container">
  {{search-field size='big' q=q}}
</div>
<div class="nw-panel-secondary-container">
  {{#if (eq currentPanel "writers")}}
    <div class="nw-panel-secondary nw-panel-flex">
      {{#if searchResults.data}}
        {{#each searchResults.data as |u|}}
          {{user-card user=u.attributes}}
        {{/each}}
      {{/if}}
    </div>
  {{/if}}
</div>
