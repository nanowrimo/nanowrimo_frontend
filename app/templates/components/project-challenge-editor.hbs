{{#form-for
  data-test-project-form=true
  afterSubmit=modal.close
  model=projectChallenge
  as |c|
}}
  <div class="form-group">
    {{c.select
      changeset=changeset
      label="What type of goal is this?"
      options=optionsForWritingType
      property="WritingType"
      isDisabled=disableWritingType
    }}
  </div>
  <div class="side-by-side">
    <div class="form-group side-by-side-even">
      {{c.input
        changeset=changeset
        label="What is your goal?"
        property="goal"
        type='number'
        isDisabled=disableDefaultGoal
      }}
    </div>
    <div class="form-group side-by-side-even">
      {{c.select
        changeset=changeset
        label=""
        options=optionsForUnitType
        property="unitType"
        isDisabled=disableUnitType
      }}
    </div>
  </div>
  <div class="side-by-side">
    <div class="form-group side-by-side-even">
      {{c.input
        changeset=changeset
        label="When do you start?"
        property="startsAt"
        type='date'
        isDisabled=disableStartEnd
      }}
    </div>
    <div class="form-group side-by-side-even">
      {{c.input
        changeset=changeset
        label="When do you end?"
        property="endsAt"
        type='date'
        isDisabled=disableStartEnd
      }}
    </div>
  </div>
{{/form-for}}
