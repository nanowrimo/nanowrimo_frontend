<div id='nano-stats-page'>
  <div class='nw-panel-intro'>
    <div id='stats-project-cover'>
      <div class='project-cover'>
        <div class='project-cover-clip'>
          <img src="{{project.coverUrl}}">
        </div>
      </div>
    </div>

    <div id='stats-project-switcher' class='switcher'>
      <div class='switcher-title'>
       Project:
      </div>
      <div class='switcher-select'>
      <select class='form-control' name='project-select' onChange={{action 'projectSelectChanged' value='target.value'}}>
        {{#each currentUser.user.persistedProjects as |p|}}
          <option value='{{p.id}}' selected ={{eq p project}}>{{p.title}}</option>
        {{/each}}
      </select>
      </div>
    </div>
    <div id='stats-project-challenge-switcher' class='switcher'>
      <div class='switcher-title'>
       Challenge:
      </div>
      <div class='switcher-select'>
      <select class='form-control' name='challenge-select' onChange={{action 'challengeSelectChanged' value='target.value'}}>
        {{#each project.projectChallenges as |pc|}}
          <option value='{{pc.id}}' selected={{eq pc projectChallenge}}>{{pc.name}}</option>
        {{/each}}
      </select>
      </div>
    </div>
  </div>
  <div class="nw-panel nw-with-grid">
    <div class="nw-panel-tools">
    </div>
    <div class="grid-wrapper">
      {{#if projectChallenge}}
        {{stats-total-words userPercentData=userPercentData comparisonPercentData=comparisonPercentData count=count goal=goal goalUnit=goalUnit class="nw-card g3-col1 g3-row1 g2-col1 g2-row1 short-card"}}
        {{stats-words-needed-today countNeededTodayData=countNeededTodayData userUnitsToday=userUnitsToday comparisonUnitsTodayData=comparisonUnitsTodayData goalUnit=goalUnit class="nw-card g3-col2 g3-row1 g2-col2 g2-row1 short-card" }}
        {{stats-days-straight streak=projectChallenge.streak class="nw-card g3-col3 g3-row1 g2-col1 g2-row2 short-card"}}
        {{stats-progress-updates sessions=projectChallengeSessions project=project projectChallenge=projectChallenge class="nw-card g3-col1 g3-row2 g2-col2 g2-row2 flippable"}}
        {{stats-my-overall-progress projectChallenge=projectChallenge class="nw-card g3-col2 g3-row2 g3-hspan2 g2-col1 g2-row3 g2-hspan2"}}
        {{stats-when-i-write projectChallenge=projectChallenge class="nw-card g3-col1 g3-row3 g2-col1 g2-row5 flippable"}}
        {{stats-my-daily-word-count projectChallenge=projectChallenge class="nw-card g3-col2 g3-row3 g3-hspan2 g2-col1 g2-row4 g2-hspan2"}}
        {{stats-where-i-write whereIWrite=whereIWrite user=currentUser.user class="nw-card g3-col1 g3-row4 g2-col2 g2-row5"}}
        {{stats-my-daily-average dailyAverage=dailyAverage goalUnit=goalUnit goalUnitSingular=goalUnitSingular class="nw-card g3-col2 g3-row4 g2-col1 g2-row6 flippable"}}
        {{stats-when-ill-finish finishDate=projectedFinishDate class="nw-card g3-col3 g3-row4 g2-col2 g2-row6 flippable"}}
        {{stats-my-writing-speed writingSpeed=writingSpeed class="nw-card g3-col1 g3-row5 g2-col1 g2-row7"}}
        {{stats-how-i-feel averageFeeling=averageFeeling class="nw-card g3-col2 g3-row5 g2-col2 g2-row7"}}
      {{/if}}
      
{{!-- 
      {{stats-my-sprintiness class="nano-card g3-col3 g3-row5 g2-col1 g2-row7"}}
--}} 

    </div>
  </div>
</div>
