{{#ember-wormhole to="ember-bootstrap-wormhole"}}
  <div class='nw-splash nw-winner-splash'>
    <div class='nw-splash nw-badge-splash '>
      <div class="nw-vflex">
        <div class='winner-splash-content'>
          <div class='unlocked'>You unlocked a badge</div>
          <div class='badge-image'>
            <img src='{{badge.awarded}}' title='{{badge.title}}' alt="" />
          </div>
          <div class='badge-title'>
            {{badge.title}}
          </div>
          <div class='badge-description'>
            {{badge.awarded_description}}
          </div>
          <hr />
          <button {{action "closeClicked"}}>close</button>
        </div>
      </div>
    </div>
  </div>
{{/ember-wormhole}}


