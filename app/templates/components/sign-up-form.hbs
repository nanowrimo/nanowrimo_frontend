<form {{action "stepOrSubmit" on="submit"}}>

  {{#if isStepOne}}

    <div class="form-group">
      {{validated-input
        autocomplete="email"
        autofocus=true
        errors=changeset.errors
        hasAttemptedSubmit=hasAttemptedSubmit
        label="Email"
        name="email"
        placeholder="user@domain.com"
        type="email"
        value=changeset.email
      }}
    </div>
    <div class="form-group">
      {{validated-input
        autocomplete="new-password"
        errors=changeset.errors
        hasAttemptedSubmit=hasAttemptedSubmit
        label="Password"
        name="password"
        type="password"
        value=changeset.password
      }}
    </div>

  {{else}}

    <div class="form-group">
      {{validated-input
        autocomplete="username"
        errors=changeset.errors
        hasAttemptedSubmit=hasAttemptedSubmit
        label="Username"
        name="username"
        value=changeset.username
      }}
    </div>
    <div class="form-group">
      <label for="timezone">Time Zone</label>
      {{select-timezone value=changeset.timeZone}}
    </div>

  {{/if}}

  <input data-test-sign-up-submit type="submit" class="btn btn-primary" value={{buttonLabel}} />
</form>
