<label for={{name}}>Time Zone</label>
<select id={{name}} name={{name}} class={{selectClasses}}
  onchange={{action (mut value) value="target.value"}}>
  {{#each timeZoneOptions as |opt|}}
    <option value={{opt.value}} selected={{eq opt.value value}}>
      {{opt.name}}
    </option>
  {{/each}}
</select>
{{#if showErrorMessage}}
  <div data-test-error-message class="invalid-feedback">{{errorMessage}}</div>
{{/if}}
