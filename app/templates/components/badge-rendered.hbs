{{#if renderSmall}}
  <img src="{{badgeImageUrl}}" {{action "toggleBadge"}} class="{{clickableClass}}" />
  {{#bs-tooltip class="nano-tooltip" delayHide="0"}}
    <div class="nano-tooltip-title">{{badge.title}}</div>
    <div class="nano-tooltip-content">{{badgeDescription}}</div>
    <div class="nano-tooltip-date">{{badgeNote}}</div>
  {{/bs-tooltip}}
{{else}}
  <div class="nano-card-icon badge-large"><img src="{{badgeImageUrl}}" {{action "toggleBadge"}} class="{{clickableClass}}"/></div>
  <div>
    <div class="max-color">{{badge.title.title}}</div>
    <div>{{badgeDescription}}</div>
    <div class="note-text">{{badgeNote}}</div>
  </div>
{{/if}}
