{{#bs-modal
  open=open
  onShow=(action "onShow")
  onHidden=(action "onHidden")
  as |modal|
}}
  {{#modal.header closeButton=false}}
    Upload a Cover
  {{/modal.header}}
  {{#form-for
    afterSubmit=modal.close
    model=project
    as |f|
  }}
    {{#modal.body}}

      {{#bs-tab
        activeId=activeTab
        onChange=(action (mut activeTab))
        as |tab|
      }}

        {{#tab.pane title="Cover" id="coverTab"}}
          <div class="form-group">
            {{f.imageUpload
              label="Update your cover image"
              property="cover"
            }}
          </div>
        {{/tab.pane}}

      {{/bs-tab}}

    {{/modal.body}}
    {{#modal.footer}}

      <input type="submit" class="nano-button" value="Save Cover" />
      <input type="button" class="nano-button btn-underlined" value="Cancel" {{action modal.close}} />

    {{/modal.footer}}
  {{/form-for}}
{{/bs-modal}}
