{{#bs-modal
  open=open
  onShow=(action "onShow")
  onHidden=(action "onHidden")
  as |modal|
}}
  {{#modal.header closeButton=false}}
    Recent Notifications
  {{/modal.header}}
  {{#modal.body
    class='notifications-modal-body'
  }}
    {{#each allNotifications as |notification|}}
      {{notification-rendered notification=notification clickAction=clickAction}}
    {{/each}}
  {{/modal.body}}
  {{#modal.footer}}
    <div><span class="underline-link" {{action 'openPreferences'}}>Preferences</span> | <span class="underline-link" {{action 'openNotifications'}}>View all</span></div>
    <div><span class="underline-link" {{action 'cancel'}}>Close</span></div>
  {{/modal.footer}}
{{/bs-modal}}
