{{#if showForm}}
  <div class="new-message-form">
    <form {{action "afterSubmit" this on='submit'}} class="full-width">
      {{#if userIsAdmin}}
        {{#if contextNotNanomessages}}
          <div class="form-group inline-checkbox">
            <input
              type="checkbox"
              name="officialMessage"
              id="officialMessage"
              class="form-control ember-checkbox"
              checked={{adminIsChecked}}
              onchange={{action 'doingSomething' value="target.checked"}}
            />
            <label class="checkbox-label" for='officialMessage'>This is an official message</label>
          </div>
          {{#if adminIsChecked}}
            <div class="form-group inline-checkbox">
              <input
                type="checkbox"
                name="sendEmail"
                id="sendEmail"
                class="form-control ember-checkbox"
                checked={{sendEmailIsChecked}}
                onchange={{action 'doEmailChecked' value="target.checked"}}
              />
              <label class="checkbox-label" for='officialMessage'>Also send message by email</label>
            </div>
          {{/if}}
        {{else}}
          <div class="form-group inline-checkbox">
            <input
              type="checkbox"
              name="sendEmail"
              id="sendEmail"
              class="form-control ember-checkbox"
              checked={{sendEmailIsChecked}}
              onchange={{action 'doEmailChecked' value="target.checked"}}
            />
            <label class="checkbox-label" for='officialMessage'>Also send message by email</label>
          </div>
        {{/if}}
      {{/if}}
      <div class="form-group">
        <div style="display: flex;">
          <div
            style="width: 85%;"
            id='nw-message-form'
            class="editable"
            data-placeholder="What's going on, writer? Type here."
          ></div>
          <button type="submit" class="button-clear" style="width: 70px;" aria-label="Submit your message." disabled={{isDisabled}}>
            <span aria-hidden="false"><i class="fa fa-paper-plane-o" aria-hidden="true" /></span>
          </button>
        </div>
      </div>
      
    </form>
