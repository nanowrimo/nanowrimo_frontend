{{#validation-error
  changeset=changeset
  hasAttemptedSubmit=hasAttemptedSubmit
  property=property
  as |hasError|
}}
  <label for={{name}}>{{label}}</label>
  <div class="select-container">
    <select id={{name}} name={{name}} disabled={{if isDisabled 'disabled' ''}}
      class={{concat 'form-control' (if hasError ' is-invalid')}}
      onchange={{action (mut (get changeset property)) value="target.value"}}>
      {{#each normalizedOptions as |opt|}}
        <option value={{opt.value}} selected={{eq opt.value (get changeset property)}}>
          {{opt.name}}
        </option>
      {{/each}}
    </select>
  </div>
{{/validation-error}}
