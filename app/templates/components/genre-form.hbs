<form {{action "validateAndSubmit" on="submit"}}>
  <div class="form-group">
    {{validated-input
      data-test-genre-name=true
      errors=changeset.errors
      hasAttemptedSubmit=hasAttemptedSubmit
      label="Name"
      name="name"
      value=changeset.name
    }}
  </div>

  <input data-test-genre-submit type="submit" class="btn btn-primary" value="Create Genre" />
</form>
