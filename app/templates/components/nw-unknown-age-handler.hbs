{{#if displayBanner}}
	<NwAlert @alertType="warning">
    <strong>Unknown birthdate</strong> Certain features may not work
    until you set your birthdate. Set your birthdate in your 
    {{link-to 'account settings' 'authenticated.settings.account'}}.
  </NwAlert>
{{/if}}

{{#bs-modal
  open=displayModal
  onShow=(action "onModalShow")
  as |modal| }}
  
  {{#modal.header closeButton=false}}
    Agree to Terms and Conditions
  {{/modal.header}}
  <form id='confirmTermsForm' {{action "confirmTermsSubmit" on="submit"}}>
  {{#modal.body}}
  
    <div class='tab-content'>
			<div class='scroll-terms'>{{{termsText}}}</div>
    
			<div class="form-group radio-group">
				<div class="radio-group-title">Verify your age</div>
				<div class='nw-radio-item'>
					<input id="over18-1" name="over18" 
						type="radio" value="1" 
						onchange={{action 'over18clicked'}}
						> 
					<label for="over18-1">
						I am over 18 years of age
					</label> 
				</div>

				<div class='nw-radio-item'>
					<input  id="over18-2" name="over18"
						type="radio" value="0"
						onchange={{action 'under18clicked'}}
					> 
					<label for="over18-2">
						I am not over 18 years of age
					</label> 
				</div>
			</div>
			{{#if displayBirthdayInput }}
				<label for='birth-date' class='form-group'>When is your birth date?</label>
				<input
					id="birth-date"
					type='date'
					class='form-control'
				>
			{{/if}}
		</div>
    {{/modal.body}}
    {{#modal.footer}}

        <input type="submit" disabled={{hasValidationError}} class="nano-button" value="Submit" />
     
    {{/modal.footer}}
    </form>
{{/bs-modal}}
