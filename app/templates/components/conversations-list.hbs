<div style='display: flex; flex-direction: column;'>
  <div style='height: 50px;'>
    <div id='pane-search-by-name' class="nw-list-search" style="padding-top: 10px;">
      {{input class="nano-list-search-field" placeholder="Search for people or regions..." value=tempSearchString key-up=(action "searchStringChange")}}
    </div>
  </div>
  <div style='height: 100%; max-height: 500px; overflow: scroll;'>
    <ul>
      {{#each sortedConversations as |conversation index|}}
        {{conversations-list-item group=conversation searchString=tempSearchString selectedGroup=group officialOnly=officialOnly}}
      {{/each}}
    </ul>
    {{#if (eq newMessage false)}}
      <button {{action 'initiateNewMessage'}} style='position: absolute; bottom: 20px; right: 20px; width: 50px; height: 50px; color: #fff; background: #005555; border: 0px; border-radius: 25px; font-size: 28px; display: flex; justify-content: center; align-items: center; filter: drop-shadow(5px 5px 4px rgba(0,0,0,0.3));'>
        <i class="fa fa-pencil-square-o" aria-hidden="true" style='margin-left: 3px;' />
      </button>
    {{/if}}
  </div>
</div>
