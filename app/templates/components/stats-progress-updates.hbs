<div class="nw-card-header">
  <div class="nw-card-title">Progress Updates</div>
  <div class="nw-card-actions nw-card-actions-right">
    <div class="nw-card-action-link" {{action 'newProjectSession'}}>+ Add a new update</div>
  </div>
</div>
<div class="nw-card-content nw-card-list">
  <div class="nw-card-list-header">
    <div class="nw-card-list-item">
      <div class="nw-card-list-item-left">
        DATE
      </div>
      <div class="nw-card-list-item-center">
        ADDED WORDS
      </div>
      <div class="nw-card-list-item-right">
      </div>
    </div>
  </div>
  <div class="nw-card-list-content">
    {{#each sortedUpdates as |ps|}}
      <ProgressUpdate
        @projectSession={{ps}}
        @onDelete={{action "userDidChangeProjectSession"}}
      />
    {{/each}}
  </div>
</div>
{{project-session-modal project=project projectChallenge=projectChallenge open=newProjectSession}}
