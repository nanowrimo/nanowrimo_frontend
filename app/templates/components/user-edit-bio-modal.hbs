{{#bs-modal
  open=open
  onHidden=(action "onHidden")
  as |modal|
}}
  {{#modal.header closeButton=false}}
    Edit Your Profile
  {{/modal.header}}
  {{#form-for
    afterSubmit=modal.close
    model=user
    data-test-user-edit-bio-form=true
    as |f|
  }}
    {{#modal.body}}

      {{#bs-tab
        activeId=activeTab
        onChange=(action (mut activeTab))
        as |tab|
      }}

        {{#tab.pane title="Bio" id="biography"}}
          <div class="form-group">
            {{f.textarea
              label="Say something about yourself!"
              property="bio"
              placeholder=(concat "Hi there, my name is " user.name "...")
              rows="15"
            }}
          </div>
        {{/tab.pane}}

        {{#tab.pane title="Favorite Books and Authors" id="favorites"}}
          <div class="form-group">
          </div>
        {{/tab.pane}}

      {{/bs-tab}}

    {{/modal.body}}
    {{#modal.footer tagName="div"}}

      <input type="submit" value="Save Details" data-test-user-bio-submit />
      <input type="button" value="Cancel" {{action modal.close}} data-test-user-bio-cancel />

    {{/modal.footer}}
  {{/form-for}}
{{/bs-modal}}
