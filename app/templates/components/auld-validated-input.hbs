<label for={{name}}>{{label}}</label>
{{input
  data-test-validated-input=name
  autocomplete=autocomplete
  autofocus=autofocus
  class=inputClasses
  focusOut=(action "markBlurred")
  name=name
  placeholder=placeholder
  type=type
  value=value
}}
{{#if showErrorMessage}}
  <div data-test-error-message class="invalid-feedback">{{errorMessage}}</div>
{{/if}}
