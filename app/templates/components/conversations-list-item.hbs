{{#link-to 'authenticated.nanomessages.show' conversationSlug}}
  <div class='conversation-list-item nw-user-listing {{isSelected}} {{isUnread}}'>
    {{#if groupIsRegion}}
      {{group-avatar group=group canEdit='false' size='medium'}}
    {{else}}
      <div class='nw-avatar nw-avatar-medium'>
        <img src='{{conversationAvatar}}' />
      </div>
    {{/if}}
    <div class='nw-user-info' style='height: 56px;'>
      <div class='nw-user-name' style='padding-bottom: 7px; display: flex; justify-content: space-between; align-items: flex-end; font-size: 14px; line-height: 14px;'>
        <div class='nw-user-name-text'>
          {{conversationLabel}}
        </div>
        <div style='font-size: 14px; font-weight: 100; color: #343434; font-family: "SansRegular", sans-serif;'>
          {{timeSince}}
        </div>
      </div>
      <div class='nw-last-message' style='height: 32px;'>
        {{{latestMessage}}}
      </div>
    </div>
  </div>
{{/link-to}}