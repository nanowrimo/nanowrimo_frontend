<div class="nw-card-header">
  <div class="nw-card-title">Where I Write</div>
</div>
<div class="nw-card-content">
  <div class="nw-card-icon">
    {{#if svgPath}}
      <img src="{{svgPath}}" />
    {{/if}}
  </div>
  {{#if writingLocation}}
    <div class="nw-promo-text">You've written mostly<div class="nw-highlight">{{writingLocation}}!</div></div>
  {{else}}
    <div class="nw-promo-text">Where in the world is {{user.name}} writing? We don't know yet.</div>
  {{/if}}
</div>
