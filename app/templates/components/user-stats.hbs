{{#if showWordCount}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number wordCount}}</div>
    <div class="plate-descriptor">words written</div>
  </div>
{{/if}}

{{#if showProjects}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number projects}}</div>
    <div class="plate-descriptor">NaNo projects</div>
  </div>
{{/if}}

{{#if showYears}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number yearsDoneCount}}</div>
    <div class="plate-descriptor">time NaNo participant</div>
    {{#bs-tooltip placement="bottom"}}
      <div>Years Done/Won</div>
      <div>
        {{#each yearsDone as |year|}}
          <span>{{short-year year}}{{#if (array-includes yearsWon year)}}*{{/if}}</span>
        {{/each}}
      </div>
    {{/bs-tooltip}}
  </div>
{{/if}}

{{#if showWordiest}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number wordiest}}</div>
    <div class="plate-descriptor">wordiest novel</div>
  </div>
{{/if}}

{{#if showWritingPace}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number writingPace}}</div>
    <div class="plate-descriptor">average writing pace</div>
  </div>
{{/if}}

{{#if showStreak}}
  <div class="plate-area">
    <div class="plate-stat">{{format-number streak}}</div>
    <div class="plate-descriptor">longest NaNo streak</div>
  </div>
{{/if}}
