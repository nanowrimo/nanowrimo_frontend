{{#if showWordCount}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-word-count>{{format-number user.totalWordCount}}</div>
    <div class="plate-descriptor">words written</div>
  </div>
{{/if}}

{{#if showYears}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-years>{{format-number user.yearsDone}}</div>
    <div class="plate-descriptor">time NaNo participant</div>
    {{#bs-tooltip placement="bottom"}}
      <div>Years Done/Won</div>
      <div>
        {{#each yearsDone as |year|}}
          <span>
            {{short-year year}}{{#if (array-includes yearsWon year)}}*{{/if}}
          </span>
        {{/each}}
      </div>
    {{/bs-tooltip}}
  </div>
{{/if}}

{{#if showProjects}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-projects>{{format-number projects}}</div>
    <div class="plate-descriptor">NaNo projects</div>
  </div>
{{/if}}

{{#if showWordiest}}
