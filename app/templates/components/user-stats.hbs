{{#if user.statsWordCountEnabled}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-word-count>{{format-number user.stats.totalWordCount}}</div>
    <div class="plate-descriptor">Words written</div>
  </div>
{{/if}}

{{#if user.statsYearsEnabled}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-years>{{format-number yearsDoneCount}}</div>
    <div class="plate-descriptor">Time NaNo participant</div>
    {{#bs-tooltip placement="bottom"}}
      <div>Years Done/Won</div>
      <div>
        {{#each user.yearsDone as |year|}}
          <span>
            {{short-year year}}{{#if (array-includes user.stats.yearsWon year)}}*{{/if}}
          </span>
        {{/each}}
      </div>
    {{/bs-tooltip}}
  </div>
{{/if}}

{{#if user.statsProjectsEnabled}}
  <div class="plate-area">
    <div class="plate-stat" data-test-user-stats-projects>{{format-number user.projects.length}}</div>
    <div class="plate-descriptor">Total projects</div>
  </div>
{{/if}}

{{#if user.statsWordiestEnabled}}
