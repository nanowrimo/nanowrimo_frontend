    <div class="plate-stat" data-test-user-stats-wordiest>{{format-number user.stats.wordiest}}</div>
    <div class="plate-descriptor">Wordiest project</div>
  </div>
{{/if}}

{{#if user.statsWritingPaceEnabled}}
