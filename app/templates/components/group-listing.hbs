<div class="nw-card short-card small-gap">
  <div class="nw-card-content">
    <div class='nw-user-listing'>
      {{group-avatar group=group linkTo=true size='large'}}
      <div class='nw-user-info'>
        <div class="nw-user-name">
          {{#if isRegion}}
            {{#link-to 'authenticated.regions.show' group.slug}}
              {{group.name}}
            {{/link-to}}
          {{/if}}
          {{#if isWritingGroup}}
            {{#link-to 'authenticated.groups.show' group.slug}}
              {{group.name}}
            {{/link-to}}
          {{/if}}
        </div>
        {{group.description}}
        
      </div>
      {{#if buttons}}
        <div class='user-buttons'>
          {{buddy-buttons user=user}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
