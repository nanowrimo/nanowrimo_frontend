<div class='nw-user-listing'>
  {{user-avatar user=user linkTo=true size=itemSize}}
  <div class='nw-user-info'>
    <div class="nw-user-name">
      {{#link-to 'authenticated.users.show' user.slug}}
        {{user.name}}
      {{/link-to}}
    </div>
    <div class="nw-user-location">
      {{#if organizer}}
        {{#if (eq itemSize "small")}}
          {{#if (eq group.groupType "event")}}
            Organizer
          {{/if}}
          {{#if (eq group.groupType "writing group")}}
            Group Admin
          {{/if}}
        {{/if}}
      {{/if}}
    </div>
  </div>
  {{#if isEditable}}
    {{#if isNotCurrentUser}}
      <button {{action 'removeUser'}} class="button-reversed">Remove</button>
      {{#if userIsApproved}}
        {{#if userIsAdmin}}
          <button {{action 'userRemoveAdmin'}} style="width: 120px; margin-left: 10px;" class="button-reversed">-admin</button>
        {{else}}
          <button {{action 'userToAdmin'}} style="width: 120px; margin-left: 10px;">+admin</button>
        {{/if}}
      {{/if}}
    {{/if}}
  {{/if}}
</div>
